<odoo>
    <record id="codabox_message_wizard_form" model="ir.ui.view">
        <field name="name">codabox.message.wizard.form</field>
        <field name="model">codabox.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="message" />
                <footer>
                    <button special="cancel" class="btn-primary" string="OK" />
                </footer>
            </form>
        </field>
    </record>

    <!--View for credentials retrieval wizard-->
    <record id="codabox_credentials_wizard" model="ir.ui.view">
        <field name="name">codabox.credentials.wizard.form</field>
        <field name="model">codabox.credentials.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>Enter the one time token given by CodaBox.</p>
                <group>
                    <field name="token" required="1" />
                </group>
                <p class="text-muted"><i
                    >If you didn't get an authentication token, please first click on<b
                        > REQUEST TOKEN</b></i></p>
                <footer>
                    <button
                        name="retrieve_credentials"
                        type="object"
                        class="btn-primary"
                        string="Retrieve Credentials"
                    />
                    <button special="cancel" class="btn-default" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!--View for new token request wizard -->
    <record id="codabox_request_token_wizard" model="ir.ui.view">
        <field name="name">codabox.request.token.wizard.form</field>
        <field name="model">codabox.credentials.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p>Enter the VAT number for which you would like to get a new Token</p>
                <group>
                    <field name="vat" required="1" />
                </group>
                <footer>
                    <button
                        name="request_token"
                        type="object"
                        class="btn-primary"
                        string="Request Token"
                    />
                    <button special="cancel" class="btn-default" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
